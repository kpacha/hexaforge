<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>TurnChecker</servlet-name>
		<servlet-class>com.hexaforge.servlet.TurnChecker</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TurnChecker</servlet-name>
		<url-pattern>/cron/return</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TurnWorker</servlet-name>
		<servlet-class>com.hexaforge.servlet.TurnWorker</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TurnWorker</servlet-name>
		<url-pattern>/worker/return</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Hexagame</servlet-name>
		<servlet-class>com.hexaforge.servlet.HexagameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Hexagame</servlet-name>
		<url-pattern>/hexagame</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
